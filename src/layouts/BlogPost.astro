---
import Layout from '@layouts/Global.astro';

import Metadata from '@components/Metadata.astro';
import Header from '@components/Header.astro';
import Footer from '@components/Footer.astro';

import AdHandler from '@components/AdHandler.astro';
import "@styles/blog.scss";

const { post } = Astro.props;
const { data: meta } = post;
const { Content, remarkPluginFrontmatter } = await post.render();

const structuredData = {
    "@context": "https://schema.org",
    "@type": "BlogPosting",
}
---

<Layout title={meta.title} desc={meta.desc}>
    <div class="date">
        <p>{meta.date.toLocaleDateString("en-US", { year: 'numeric', month: 'short', day: 'numeric' })}</p>
        <p>&#8212;</p>
        <p>{remarkPluginFrontmatter.readTime}</p>
    </div>
    <h1>{meta.title}</h1>
    <div class="tags">
        {meta.tags?.map(tag => <span>{tag}</span>)}
    </div>
    <hr>
    <article>
        <Content />
    </article>
    <AdHandler slot="after-render" />
</Layout>

<style lang="scss">
    article {
        display: flex;
        flex-direction: column;
    }

    .date {
        text-align: center;
        > * {
            margin-bottom: 0;
            display: inline-block;
        }
    }

    .tags {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
        margin: 1rem 0;
    }

    .tags span {
        background-color: var(--alt-background);
        padding: 0.25rem 0.5rem;
        border-radius: 0.25rem;
    }
</style>
